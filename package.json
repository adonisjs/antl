{
  "name": "@adonisjs/i18n",
  "version": "1.5.2",
  "description": "Internationalization for AdonisJS apps",
  "main": "build/providers/I18nProvider.js",
  "files": [
    "build/adonis-typings",
    "build/providers",
    "build/templates",
    "build/src",
    "build/instructions.js",
    "build/instructions.d.ts",
    "build/instructions.md"
  ],
  "types": "build/adonis-typings/index.d.ts",
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node japaFile.js",
    "clean": "del build",
    "copyfiles": "copyfiles \"templates/**/*.txt\" \"instructions.md\" build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile && npm run copyfiles",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "commit": "git-cz",
    "release": "np",
    "version": "npm run build",
    "sync-labels": "github-label-sync --labels ./node_modules/@adonisjs/mrm-preset/gh-labels.json adonisjs/antl"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/antl.git"
  },
  "keywords": [
    "intl",
    "localization",
    "translation",
    "i18n"
  ],
  "author": "virk,adonisjs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adonisjs/antl/issues"
  },
  "homepage": "https://github.com/adonisjs/antl#readme",
  "devDependencies": {
    "@adonisjs/core": "^5.4.0",
    "@adonisjs/mrm-preset": "^4.1.2",
    "@adonisjs/repl": "^3.1.6",
    "@adonisjs/require-ts": "^2.0.8",
    "@adonisjs/sink": "^5.1.6",
    "@adonisjs/view": "^6.1.1",
    "@poppinss/dev-utils": "^1.1.5",
    "@types/luxon": "^2.0.4",
    "@types/node": "^16.10.2",
    "commitizen": "^4.2.4",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^4.0.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-adonis": "^1.3.3",
    "eslint-plugin-prettier": "^4.0.0",
    "github-label-sync": "^2.0.2",
    "husky": "^7.0.2",
    "japa": "^3.1.1",
    "mrm": "^3.0.9",
    "np": "^7.5.0",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "np": {
    "contents": ".",
    "anyBranch": false
  },
  "dependencies": {
    "@poppinss/colors": "^2.1.5",
    "@poppinss/intl-formatter": "^1.0.1",
    "@poppinss/utils": "^3.3.0",
    "accepts": "^1.3.7",
    "intl-messageformat": "^9.9.3",
    "luxon": "^2.0.2",
    "yaml": "^1.10.2"
  },
  "peerDependencies": {
    "@adonisjs/core": "^5.4.0"
  },
  "directories": {
    "test": "test"
  },
  "adonisjs": {
    "instructions": "./build/instructions.js",
    "instructionsMd": "./build/instructions.md",
    "templates": {
      "config": [
        "i18n.txt"
      ]
    },
    "metaFiles": [
      {
        "pattern": "resources/lang/**/*.(json|yaml)",
        "reloadServer": true
      }
    ],
    "types": "@adonisjs/i18n",
    "providers": [
      "@adonisjs/i18n"
    ]
  },
  "publishConfig": {
    "tag": "latest",
    "access": "public"
  }
}
